{
  "name": "vue-admin-js",
  "version": "0.0.2",
  "description": "An open source frontend Framework for building admin applications running in the browser, using ES6, Vue.js and Vuetify.js",
  "author": "Camba <info@camba.coop>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib ./src/index.js",
    "lint": "vue-cli-service lint",
    "prepublish": "npm run build",
    "publish": "git push origin --tags && git push origin",
    "release:major": "npm version major && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:patch": "npm version patch && npm publish",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/polyfill": "^7.0.0-beta.49",
    "@vue/cli-plugin-babel": "^3.0.0-rc.10",
    "@vue/cli-plugin-e2e-cypress": "^3.0.0-rc.10",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.3.0",
    "@vue/cli-service": "^3.1.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "axios": "^0.18.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "bavaria-ipsum": "^1.0.3",
    "cypress": "^3.1.4",
    "cypress-dark": "^1.7.4",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "joi": "^14.3.1",
    "vue": "^2.5.18",
    "vue-cli-plugin-vuetify": "^0.1.6",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.21",
    "vuetify": "^1.3.15",
    "vuex": "^3.0.1",
    "vuex-crud": "^0.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/airbnb"
    ],
    "rules": {
      "semi": ["error", "never"],
      "max-len": ["error", { "code": 80 }],
      "import/no-dynamic-require": "off",
      "global-require": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/Cambalab/vue-admin/issues"
  },
  "directories": {
    "doc": "https://github.com/Cambalab/vue-admin/blob/develop/Docs"
  },
  "homepage": "https://github.com/Cambalab/vue-admin#readme",
  "keywords": [
    "admin",
    "admin-dashboard",
    "admin-on-rest",
    "frontend-framework",
    "open-source",
    "vue",
    "vuetify"
  ],
  "license": "GPL-3.0",
  "main": "./dist/vue-admin-js.umd.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cambalab/vue-admin.git"
  }
}
